.noticeClass{
  width: 100%;
  height: 160px;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128px;
  height: 128px;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin: 10px
}

.listClass{
  position:relative;
  padding:0 0 2px 120px;
  height:100px;
}


.divider{
  height: 2px;
  background-color: #f3f3f3
}

.headClass{
  width: 100px;
  height: 80px;
  margin: 10px;
  background-size:cover;
  position: absolute;
  left:0;top:0;
}

.stepCntClass{
  color: #333333;
  font-size:14px;
  padding-bottom:2px;
}

.rankClass{
  color: #15abc4
}

.noticeDetail{
  
  padding-top: 2px;
  padding-bottom: 10px;
  word-break: break-all;
  word-wrap: break-word;
}

.title{
  color: #15abc4;
  font-size: 16px;
  padding-top:8px;
}

.time{
  color: #999999;
  font-size: 12px;
}

.usermotto {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: #f1f1f1;
  width: 100%;
  position: fixed;
  bottom:0px;
  padding-top: 5px;
}

.bottomTab{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}




/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
  margin-bottom: 50px;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
