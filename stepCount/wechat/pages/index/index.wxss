/* firstPage.wxss */
.userinfo {
  display: flex;
  flex: 2;
  flex-direction: column;
  align-items: center;
  margin-top: 100px;
}

.stepstatus {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top:10px;
  width: 100%;
}

.stepTime {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 10px;
  width: 100%;
}

.stepCal {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  z-index: 1;
  flex: 1;
}

.usermotto {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  background-color: white;
  background-size: 100% 100%;
} 

.circle-box {
  margin-top: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

 .circle {
  position: absolute;
  top: 110px;
  left: 0;
  width:100%;
  height:240px;
} 

.bottomTab{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-around;
  align-items: center
}

.todayTextWrap{
  background-color: #eee;
  height: 50px;
  padding-left: 10px;
  padding-right: 10px;
  z-index: 1;
  position: relative;
}

.todayText{
  color: #079A4D;
  font-size: 10px; 
  width: 25px;
  display: inline-block;
}

.todayStep{
  color: #079A4D; 
  font-size: 30px; 
  height: 50px;
  line-height: 50px;
}

.userinfo-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.userInfoWrap{
  display: flex; 
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  z-index: 1;
  flex: 1;
  align-items: center;
}

.userInfoText{
  display: flex; 
  flex-direction: column;
  justify-content: space-around;
  text-align: center;
}

.userInfoSelf{
  display: flex; 
  flex-direction: column;
  justify-content: flex-end;
}

.userInfoTextBtn{
  background-color: #019B4C;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  text-align: center;
  line-height: 40px;
  margin-left: auto; 
  margin-right: auto;
  color: #fff300
}

.userinfo-nickname{
  text-align: center;
  background-color: #ff0f00;
  color: white;
}

.circle_bg{
  position: absolute;
  top: 180px;
  left: 0px;
}

page{
  height: 100%!important
}