    //审批
    $(".shenpi-col").click(function()
    {
        
        var statusValue=$(this).attr("data-value");

       var  radio1=$('input[name="radio1"]:checked').val();

        if(!radio1)
        {
            showMessage('请评价缺点发现人！',1500);
            return;
        }

        var  radio2=$('input[name="radio2"]:checked').val();

        if(!radio2)
        {
            showMessage('请评价缺点处理人！',1500);
            return;
        }




        
        $.ajax({
        type: 'POST',
        url: serveUrl+'index.php?g=Api&m=My&a=pingjiaTijiao' ,
        data: {
            pid: localStorage.pid,
            pstate: statusValue,
            p_pingjia: radio1,
            p_pingjia_fenshu: $('input[name="radio1"]:checked').attr("data-value"),
            p_pingjia_chuli: radio2,
            p_pingjia_chuli_fenshu: $('input[name="radio2"]:checked').attr("data-value")
        },
        dataType: "json",
        success: function(data)
        {

            if(data=="1")
            {
                showMessage('操作成功！',1500);
                setTimeout(
                    function() {
                        
                          api.closeWin();
                        
                    }, 1000);
            }
            else
            {
                showMessage('操作失败！',1500);
            }


        },
        error:function(msg)
        {
            //alert(msg);
        }
    });
        
        
    });



 $("#img").on("click","img",function()
        {
            var imgUrl= $(this).attr("src");
            openPicView(imgUrl);
        });



    var pid = localStorage.pid;

    var page=0;
    $.ajax({
        type: 'GET',
        url: serveUrl+'index.php?g=Api&m=My&a=shebeiprocontent' ,
        data: {page:page,pid:pid} ,
        dataType: "json",
        success: function(data)
        {


            var imgHtml="";

            if (data.procontent.p_img) {
                var imageUrl = JSON.parse(data.procontent.p_img);

                for (var j = 0; j < imageUrl.length; j++)
                {
                    imgHtml = imgHtml + '<div class="aui-col-xs-4">' +
                            '<img style="height: 111.66px" src="' + imageUrl[j].img + '"/>' +
                            '</div>';
                }
            }

            var wanimg="";

            if (data.procontent.p_wanimg) {
                var imageurl = JSON.parse(data.procontent.p_wanimg);

                for (var i = 0; i < imageurl.length; i++)
                {
                    wanimg = wanimg + '<div class="aui-col-xs-4">' +
                            '<img  src="' + imageurl[i].img + '"/>' +
                            '</div>';
                }
            }


            //alert(JSON.stringify(data));

            $("#img").append(imgHtml);
            $("#p_wanimg").append(wanimg);
            $("#pname").append(data.procontent.pname);
            $("#ename").append(data.luruequ);
            $("#preason").append(data.procontent.preason);
            $("#p_readate").append(data.procontent.p_readate);
            $("#pdate").append(data.procontent.pdate);
            $("#pzg_date").append(data.procontent.pzg_date);
            $("#sname").append(data.procontent.sname);
            $("#wan").append(data.procontent.pcontent);
            $("#p_type_name").append(data.procontent.p_type_name);
            $("#type_name").append(data.procontent.p_type_name);
            $("#s_name").append(data.zhenggairen);
            $("#equ").append(data.equ);
            $("#zuoyeren").append(data.zuoyeren);

            if(data.procontent.pstate >= 2){
                $("#zhenggai").show();
            }else {
                $("#zhenggai").hide();
            }

            if(data.procontent.pstate == 4){
                $("#pingjiaCol").show();



                $("#pingjiaList").append('<li class="aui-list-item">'+
                        '<div class="aui-list-item-inner">'+
                        '<div class="aui-list-item-input">'+data.procontent.p_pingjia+
                        '</div><div class="aui-list-item-input">'+data.procontent.p_pingjia_fenshu+'分</div>'+
                        '</div>'+
                        '</li>');


                $("#pingjiachuliList").append('<li class="aui-list-item">'+
                        '<div class="aui-list-item-inner">'+
                        '<div class="aui-list-item-input">'+data.procontent.p_pingjia_chuli+
                        '</div><div class="aui-list-item-input">'+data.procontent.p_pingjia_chuli_fenshu+'分</div>'+
                        '</div>'+
                        '</li>');



                $("#p_tichuquedian").text(data.procontent.p_tichuquedian);
                $("#p_zhenggai").text(data.procontent.p_zhenggai);


            }

        },
        error:function(msg)
        {
            //alert(msg);
        }
    });




</script>