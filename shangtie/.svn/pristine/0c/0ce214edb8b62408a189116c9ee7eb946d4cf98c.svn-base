                                <div class="aui-list-item-right">08:00</div>
                            </div>
                            <div id="ceshi" class="aui-list-item-text aui-ellipsis-2">
                                包保人:
                            </div>
                        </div>
                    </div>
                </li>-->


    </ul>

    <div class="load-more" id="loadCol">
                       <span >加载更多</span>
   </div>

</div>






</body>
</html>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/jquery-1.8.1.min.js"></script>
<script type="text/javascript" src="../script/common.js"></script>
<script type="text/javascript" src="../script/aui-dialog.js" ></script>
<script type="text/javascript" src="../script/aui-actionsheet.js" ></script>
<script type="text/javascript" src="../script/toast.js"></script>

<script type="text/javascript">
    apiready = function(){
        api.setStatusBarStyle({
            style: 'dark',
            color: '#666'
        });
        api.parseTapmode();

    };


    $("#loadCol span").click(function()
    {
        getData(page);
    });

    var page=0;
    function getData(pageParam)
    {
        $.ajax({
            type: 'GET',
            url: serveUrl+'index.php?g=Api&m=CommonApi&a=gongquShebei' ,
            data: {page:pageParam,keyword:$("#search-input").val(),scode:localStorage.gongqu_scode} ,
            dataType: "json",
            success: function(data)
            {
                //alert(JSON.stringify(data));
                //console.log(data);
                console.log(data.length)
                console.log(page);

                var html="";
                for(var i=0;i<data.length;i++)
                {
                    html=html+' <li class="aui-list-item aui-list-item-arrow" data-id="'+data[i].eid+'">'+
                            '<div class="aui-media-list-item-inner">'+
                            '<div class="aui-list-item-inner">'+
                            '<div class="aui-list-item-text">'+
                            '<div class="aui-list-item-title">我的设备:'+data[i].ename +
                            '</div>'+
                            '<div class="aui-list-item-right">包保人:'+data[i].eper+
                            '</div>'+
                            '</div>'+
                            '<div class="aui-list-item-text aui-ellipsis-2" style="margin-top: 0.6rem">所属企业：'+data[i].ebusiness+
                            '</div>'+
                            '<div class="erweima" tapmode   data-eid="'+data[i].eid+'">更换二维码'+
                            '</div>' +
                            '</div>'+
                            '</div>'+
                            '</li>';
                }

                page++;

                if(data.length<20)
                {
                    $("#loadCol span").text("没有更多数据");
                }


                $("#workList").append(html);

            },
            error:function(msg)
            {
                //alert(msg);
            }
        });
    }

    getData(page);

    $("#workList").on("click",".aui-list-item",function(e)
    {

        if(!$(e.target).hasClass("erweima"))
        {
            var eid = $(this).attr("data-id");
            localStorage.eid = eid;
            api.openWin({
                name: "myequipmentWin",
                url: 'myequipmentWin.html',
                bounces:false,
                slidBackEnabled:true,
                vScrollBarEnabled:false,
                progress:{
                    type:"page"
                }
            });

        }

    });

    var actionsheet = new auiActionsheet();

    $("#workList").on("click",".erweima",function openActionsheet()
    {
        localStorage.ewm_aeid=$(this).attr("data-eid");

        actionsheet.init({
            frameBounces:true,//当前页面是否弹动，（主要针对安卓端）
            title:"请选择",
            cancelTitle:'这里取消按钮',
            buttons:['解绑']
        },function(ret){
            if(ret.buttonIndex == 1){
                var ewm_eid = localStorage.ewm_aeid;
                //alert(ewm_eid);
                $.ajax({
                    type: 'GET',
                    url: serveUrl+'index.php?g=Api&m=My&a=Ewmcancel' ,
                    data: {eid:ewm_eid,} ,
                    dataType: "json",
                    success: function(data)
                    {
                        //alert(JSON.stringify(data));
                        //console.log(data);
                        if(data == 1){
                            showMessage('解绑成功！',1500);
                            setTimeout(function() {
                                $("li").detach();
                                getData(page);
                            }, 1000);


                        }else{

                        }

                    },
                    error:function(msg)
                    {
                        //alert(msg);
                    }
                });


            };

        })



        /*  localStorage.ewm_aeid=$(this).attr("data-eid");*/

        /*       api.openWin({
         name: "ewmshenqingWin",
         url: 'ewmshenqingWin.html',
         bounces:false,
         slidBackEnabled:true,
         vScrollBarEnabled:false,
         progress:{
         type:"page"
         }
         });*/
    });





</script>
<!--搜索框-->
<script type="text/javascript">
    apiready = function(){
        api.parseTapmode();
    };
    var searchBar = document.querySelector(".aui-searchbar");
    var searchBarInput = document.querySelector(".aui-searchbar input");
    var searchBarBtn = document.querySelector(".aui-searchbar .aui-searchbar-btn");
    var searchBarClearBtn = document.querySelector(".aui-searchbar .aui-searchbar-clear-btn");
    if(searchBar){
        searchBarInput.onclick = function(){
            searchBarBtn.style.marginRight = 0;
        };
        searchBarInput.oninput = function(){
            if(this.value.length){
                searchBarClearBtn.style.display = 'block';
                searchBarBtn.classList.add("aui-text-info");
                searchBarBtn.textContent = "搜索";
            }else{
                searchBarClearBtn.style.display = 'none';
                searchBarBtn.classList.remove("aui-text-info");
                searchBarBtn.textContent = "取消";
            }
        }
    }
    searchBarClearBtn.onclick = function(){
        window.location.reload();
        this.style.display = 'none';
        searchBarInput.value = '';
        searchBarBtn.classList.remove("aui-text-info");
        searchBarBtn.textContent = "取消";
    };
    searchBarBtn.onclick = function(){

        $("li").detach();
        if($("#search-input").length){
            /*searchBarInput.blur();*/
            console.log($("#search-input").val());

            page=0;

            getData(page);


            //document.getElementById("search-keywords").textContent = keywords;
        }else{
            this.style.marginRight = "-"+this.offsetWidth+"px";
            searchBarInput.value = '';
            searchBarInput.blur();
        }
    };


</script>
