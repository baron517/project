        huancunObj.imgList=[];
        $(".shuju").each(function()
        {
            huancunObj.shuruList.push($(this).val());
            
        })
        
        $("#imgList img").each(function()
        {
            huancunObj.imgList.push($(this).attr("src"));
        });
        
        var cunzaiFlag=0;
        
        for(var i=0;i<huancunList.length;i++)
