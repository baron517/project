            huancunList.push(huancunObj);
        }

        //alert(JSON.stringify(huancunList));
        
        localStorage.huancunList=JSON.stringify(huancunList);
        
        showMessage("保存成功！",1500);

        setTimeout(function()
        {
            api.closeWin({
            });
        },1000)

        
    });



   

