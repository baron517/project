/**swiper.wxss**/

.tab-h{
    height: 80rpx;
    width: 100%; 
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #FFFFFF; 
    font-size: 16px; 
    white-space: nowrap;
    position: fixed;
    top: 0; 
    left: 0;
    z-index: 99;
     }
.tab-item{
  margin:0 auto;
  display: inline-block;
  width: 50%;
  text-align: center;
  font-size: 0.9rem;
  border-right: 1px solid #000
  }
.tab-item.active{
  color: #384A9E;
  position: relative;
  }
.tab-item.active:after{
   content: "";
   display: block;
   height: 0.2rem;
   width: 3rem;
   background: #384A9E;
   position: absolute; 
   bottom: 0rem;
   left: 35%;
   border-radius: 16rpx;
   }



